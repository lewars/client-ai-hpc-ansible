# -*- mode: yaml; -*-
---

extends: default

rules:
  line-length:
    max: 120
    level: warning
  truthy: disable  # accept both 'true/false' and 'yes/no'
  comments:
    require-starting-space: true
    min-spaces-from-content: 1
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  indentation:
    spaces: 2
    indent-sequences: consistent

ignore: |
  .venv/
  .cache/
  venv/

